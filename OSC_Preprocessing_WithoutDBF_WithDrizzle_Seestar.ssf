########### PREPROCESSING SCRIPT ###########
# Script for color camera preprocessing
# with drizzle
# needs 1 set of RAW images in the working
# directory
#
#
############################################

requires 1.2.0

#preprocess lights
link light -out=process
cd process
calibrate light -cfa -equalize_cfa -debayer

# Align lights with drizzle 2x in 2 pass
register pp_light -2pass -drizzle
seqapplyreg pp_light -drizzle -framing=max

#stack calibrated lights
stack r_pp_light rej 3 3 -norm=addscale -output_norm -filter-wfwhm=90% -out=result

# and flipping if required
load result
mirrorx -bottomup
save ../result/result_drizzle_$LIVETIME:%d$s

cd ..
close
